<Window x:Class="intern.Views.MaterialsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:intern.Views"
        mc:Ignorable="d"
        Background="#FFFFFF"
        FontFamily="Segoe UI"
        Title="Материалы" Height="450" Width="800">

    <Window.Resources>
        <SolidColorBrush x:Key="AccentBrush" Color="#2D6033" />
        <SolidColorBrush x:Key="SecondaryBrush" Color="#BBD9B2" />
        <SolidColorBrush x:Key="LightBackground" Color="#F5F9F3" />

        <Style x:Key="ActionButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource AccentBrush}" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Padding" Value="10,5" />
            <Setter Property="FontSize" Value="16" />
            <Setter Property="Cursor" Value="Hand" />
        </Style>
    </Window.Resources>

    <DockPanel>
        <!-- Заголовок с кнопкой -->
        <Border Background="{StaticResource SecondaryBrush}"
                Padding="10"
                DockPanel.Dock="Top">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Логотип и заголовок -->
                <StackPanel Grid.Column="0" 
                            Orientation="Horizontal" 
                            VerticalAlignment="Center">
                    <Image Source="/Resources/Наш декор.png"
                           Height="48"
                           Margin="0,0,10,0" />
                    <TextBlock Text="{Binding Header}"
                               FontSize="28"
                               FontWeight="SemiBold"
                               VerticalAlignment="Center"
                               Foreground="#1A471F" />
                </StackPanel>

                <!-- Кнопка -->
                <Button Grid.Column="2"
                        Content="Редактировать"
                        Command="{Binding EditMaterialCommand}"
                        Style="{StaticResource ActionButtonStyle}"
                        FontSize="18"
                        VerticalAlignment="Center"
                        HorizontalAlignment="Right"/>
            </Grid>
        </Border>

        <!-- Основное содержимое -->
        <Border Background="{StaticResource LightBackground}"
                Padding="10">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Таблица -->
                <Border Grid.Row="0"
                        Background="White"
                        CornerRadius="6"
                        BorderThickness="1"
                        BorderBrush="{StaticResource SecondaryBrush}">
                    <DataGrid ItemsSource="{Binding Materials}"
                              SelectedItem="{Binding SelectedMaterial, Mode=TwoWay}"
                              IsReadOnly="True"
                              AutoGenerateColumns="False"
                              FontSize="18"
                              CanUserAddRows="False"
                              RowHeight="36"
                              HeadersVisibility="Column"
                              BorderThickness="0"
                              GridLinesVisibility="None">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Материал" 
                                                Binding="{Binding MaterialName}"
                                                Width="*"/>
                            <DataGridTextColumn Header="Тип" 
                                                Binding="{Binding MaterialTypeName}"
                                                Width="150"/>
                            <DataGridTextColumn Header="Кол-во на продукт" 
                                                Binding="{Binding QuantityPerProduct}"
                                                Width="180"/>
                            <DataGridTextColumn Header="Ед. изм." 
                                                Binding="{Binding Unit}"
                                                Width="120"/>
                        </DataGrid.Columns>

                        <DataGrid.RowStyle>
                            <Style TargetType="DataGridRow">
                                <Setter Property="BorderBrush" Value="{StaticResource SecondaryBrush}" />
                                <Setter Property="BorderThickness" Value="0,0,0,1" />
                            </Style>
                        </DataGrid.RowStyle>

                        <DataGrid.ColumnHeaderStyle>
                            <Style TargetType="DataGridColumnHeader">
                                <Setter Property="Background" Value="{StaticResource SecondaryBrush}" />
                                <Setter Property="Foreground" Value="#1A471F" />
                                <Setter Property="FontSize" Value="16" />
                                <Setter Property="FontWeight" Value="SemiBold" />
                                <Setter Property="Height" Value="40" />
                                <Setter Property="BorderThickness" Value="0" />
                                <Setter Property="Padding" Value="10,0" />
                            </Style>
                        </DataGrid.ColumnHeaderStyle>
                    </DataGrid>
                </Border>
            </Grid>
        </Border>
    </DockPanel>
</Window>