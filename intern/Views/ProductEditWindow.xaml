<Window x:Class="intern.Views.ProductEditWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Редактировать продукт"
        FontFamily="Gabriola"
        Background="#FFFFFF"
        FontSize="20"
        Height="400"
        Width="500">

    <Window.Resources>
        <SolidColorBrush x:Key="AccentBrush" Color="#2D6033" />
        <SolidColorBrush x:Key="SecondaryBrush" Color="#BBD9B2" />
    </Window.Resources>

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" Margin="0,0,0,10">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="150"/>
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <TextBlock Grid.Row="0" Grid.Column="0" Text="Артикул" Margin="0,0,5,5" />
            <TextBox Grid.Row="0" Grid.Column="1"
                     Text="{Binding Article, UpdateSourceTrigger=PropertyChanged}"
                     Margin="0,0,0,5" />

            <TextBlock Grid.Row="1" Grid.Column="0" Text="Тип продукта" Margin="0,0,5,5" />
            <ComboBox Grid.Row="1" Grid.Column="1"
                      ItemsSource="{Binding ProductTypes}"
                      SelectedItem="{Binding SelectedProductType}"
                      DisplayMemberPath="Name"
                      IsEditable="True"
                      Margin="0,0,0,5" />

            <TextBlock Grid.Row="2" Grid.Column="0" Text="Наименование:" Margin="0,0,5,5" />
            <TextBox Grid.Row="2" Grid.Column="1"
                     Text="{Binding Name, UpdateSourceTrigger=PropertyChanged}"
                     Margin="0,0,0,5" />

            <TextBlock Grid.Row="3" Grid.Column="0" Text="Мин. стоим. парт. " Margin="0,0,5,5" />
            <TextBox Grid.Row="3" Grid.Column="1"
                     Text="{Binding MinPartnerPrice, UpdateSourceTrigger=PropertyChanged, StringFormat=F2}"
                     PreviewTextInput="NumericTextBox_PreviewTextInput"
                     Margin="0,0,0,5" />

            <TextBlock Grid.Row="4" Grid.Column="0" Text="Ширина рулона" Margin="0,0,5,5" />
            <TextBox Grid.Row="4" Grid.Column="1"
                     Text="{Binding RollWidth, UpdateSourceTrigger=PropertyChanged, StringFormat=F2}"
                     PreviewTextInput="NumericTextBox_PreviewTextInput"
                     Margin="0,0,0,5" />
        </Grid>

        <StackPanel Grid.Row="1"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right">
            <Button Content="Сохранить"
                    Width="100"
                    Margin="0,0,10,0"
                    Command="{Binding SaveCommand}"
                    Style="{StaticResource GreenActionButtonStyle}" />
            <Button Content="Назад"
                    Width="80"
                    Command="{Binding CancelCommand}" />
        </StackPanel>
    </Grid>
</Window>
