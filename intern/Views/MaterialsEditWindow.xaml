<Window x:Class="intern.Views.MaterialsEditWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:intern.Views"
        mc:Ignorable="d"
        Title="Редактировать продукт"
        FontFamily="Gabriola"
        Background="#FFFFFF"
        FontSize="20"
        Height="450"
        Width="500">
    
    <Window.Resources>
        <SolidColorBrush x:Key="AccentBrush" Color="#2D6033" />
        <SolidColorBrush x:Key="SecondaryBrush" Color="#BBD9B2" />
    </Window.Resources>

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" Margin="0,0,0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="190"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <TextBlock Grid.Row="0" Grid.Column="0" Text="Наименование:" Margin="0,0,5,5"/>
            <TextBox Grid.Row="0" Grid.Column="1"
                     Text="{Binding Name, UpdateSourceTrigger=PropertyChanged}"
                     Margin="0,0,0,5"/>

            <TextBlock Grid.Row="1" Grid.Column="0" Text="Тип материала:" Margin="0,0,5,5"/>
            <ComboBox Grid.Row="1" Grid.Column="1"
                      ItemsSource="{Binding MaterialTypes}"
                      SelectedItem="{Binding SelectedMaterialType}"
                      DisplayMemberPath="Name"
                      Margin="0,0,0,5"/>

            <TextBlock Grid.Row="2" Grid.Column="0" Text="Ед. измерения:" Margin="0,0,5,5"/>
            <ComboBox Grid.Row="2" Grid.Column="1"
                      ItemsSource="{Binding Units}"
                      SelectedItem="{Binding SelectedUnit}"
                      Margin="0,0,0,5"/>

            <TextBlock Grid.Row="3" Grid.Column="0" Text="Цена:" Margin="0,0,5,5"/>
            <TextBox Grid.Row="3" Grid.Column="1"
                     Text="{Binding Cost, UpdateSourceTrigger=PropertyChanged, StringFormat=F2}"
                     PreviewTextInput="NumericTextBox_PreviewTextInput"
                     Margin="0,0,0,5"/>

            <TextBlock Grid.Row="4" Grid.Column="0" Text="Остаток на складе:" Margin="0,0,5,5"/>
            <TextBox Grid.Row="4" Grid.Column="1"
                     Text="{Binding StockQuantity, UpdateSourceTrigger=PropertyChanged, StringFormat=F2}"
                     PreviewTextInput="NumericTextBox_PreviewTextInput"
                     Margin="0,0,0,5"/>

            <TextBlock Grid.Row="5" Grid.Column="0" Text="Мин. остаток:" Margin="0,0,5,5"/>
            <TextBox Grid.Row="5" Grid.Column="1"
                     Text="{Binding MinStock, UpdateSourceTrigger=PropertyChanged, StringFormat=F2}"
                     PreviewTextInput="NumericTextBox_PreviewTextInput"
                     Margin="0,0,0,5"/>

            <TextBlock Grid.Row="6" Grid.Column="0" Text="Кол-во в упаковке:" Margin="0,0,5,5"/>
            <TextBox Grid.Row="6" Grid.Column="1"
                     Text="{Binding PackageQuantity, UpdateSourceTrigger=PropertyChanged, StringFormat=F2}"
                     PreviewTextInput="NumericTextBox_PreviewTextInput"
                     Margin="0,0,0,5"/>
            
            <TextBlock Grid.Row="7" Grid.Column="0" Text="Кол-во на продукт:" Margin="0,0,5,5"/>
            <TextBox Grid.Row="7" Grid.Column="1"
                     Text="{Binding QuantityPerProduct, UpdateSourceTrigger=PropertyChanged, StringFormat=F2}"
                     PreviewTextInput="NumericTextBox_PreviewTextInput"
                     Margin="0,0,0,5"/>
        </Grid>

        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Сохранить"
                    Width="100"
                    Margin="0,0,10,0"
                    Command="{Binding SaveCommand}"
                    Background="{StaticResource AccentBrush}"
                    Foreground="White"/>

            <Button Content="Отмена"
                    Width="80"
                    Command="{Binding CancelCommand}"/>
        </StackPanel>
    </Grid>
</Window>
