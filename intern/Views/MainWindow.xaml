<Window x:Class="intern.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Подсистема управления продукцией"
        FontFamily="Segoe UI"
        Background="#FFFFFF"
        Height="650" Width="950">

    <Window.Resources>
        <SolidColorBrush x:Key="AccentBrush" Color="#2D6033" />
        <SolidColorBrush x:Key="SecondaryBrush" Color="#BBD9B2" />
        <SolidColorBrush x:Key="LightBackground" Color="#F5F9F3" />

        <Style x:Key="ActionButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource AccentBrush}" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Padding" Value="12,6" />
            <Setter Property="FontSize" Value="16" />
            <Setter Property="Cursor" Value="Hand" />
            <Setter Property="Margin" Value="0,0,8,0" />
        </Style>
    </Window.Resources>

    <DockPanel>
        <!-- Заголовок с кнопками -->
        <Border Background="{StaticResource SecondaryBrush}"
                Padding="15"
                DockPanel.Dock="Top">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Логотип и заголовок -->
                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                    <Image Source="/Resources/Наш декор.png"
                           Height="52"
                           Margin="0,0,15,0" />
                    <TextBlock Text="Список продукции"
                               FontSize="30"
                               FontWeight="SemiBold"
                               VerticalAlignment="Center"
                               Foreground="#1A471F" />
                </StackPanel>

                <!-- Кнопки -->
                <StackPanel Grid.Column="2" 
                            Orientation="Horizontal" 
                            VerticalAlignment="Center">
                    <Button Content="Добавить"
                            Style="{StaticResource ActionButtonStyle}"
                            Command="{Binding AddProductCommand}"
                            FontSize="17"/>
                    <Button Content="Изменить"
                            Style="{StaticResource ActionButtonStyle}"
                            Command="{Binding EditProductCommand}"
                            FontSize="17"/>
                    <Button Content="Материалы"
                            Style="{StaticResource ActionButtonStyle}"
                            Command="{Binding OpenMaterialsCommand}"
                            FontSize="17"/>
                    <Button Content="Расчёт материала"
                            Style="{StaticResource ActionButtonStyle}"
                            Command="{Binding OpenMaterialCalculatorCommand}"
                            FontSize="17"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Основное содержимое -->
        <Border Background="{StaticResource LightBackground}"
                Padding="15">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Таблица -->
                <Border Grid.Row="0"
                        Background="White"
                        CornerRadius="6"
                        BorderThickness="1"
                        BorderBrush="{StaticResource SecondaryBrush}">
                    <DataGrid IsReadOnly="True"
                              ItemsSource="{Binding Products}"
                              SelectedItem="{Binding SelectedProduct}"
                              AutoGenerateColumns="False"
                              CanUserAddRows="False"
                              FontSize="16"
                              RowHeight="38"
                              HeadersVisibility="Column"
                              BorderThickness="0"
                              GridLinesVisibility="None">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Артикул" 
                                                Binding="{Binding Article}"
                                                Width="120"/>
                            <DataGridTextColumn Header="Тип" 
                                                Binding="{Binding ProductTypeName}"
                                                Width="150"/>
                            <DataGridTextColumn Header="Наименование" 
                                                Binding="{Binding Name}"
                                                Width="*"/>
                            <DataGridTextColumn Header="Мин. стоим. партнёра" 
                                                Binding="{Binding MinPartnerPrice}"
                                                Width="180"/>
                            <DataGridTextColumn Header="Ширина рулона" 
                                                Binding="{Binding RollWidth}"
                                                Width="140"/>
                            <DataGridTextColumn Header="Себестоимость" 
                                                Binding="{Binding CalculatedCost}"
                                                Width="140"/>
                        </DataGrid.Columns>

                        <DataGrid.RowStyle>
                            <Style TargetType="DataGridRow">
                                <Setter Property="BorderBrush" Value="{StaticResource SecondaryBrush}" />
                                <Setter Property="BorderThickness" Value="0,0,0,1" />
                            </Style>
                        </DataGrid.RowStyle>

                        <DataGrid.ColumnHeaderStyle>
                            <Style TargetType="DataGridColumnHeader">
                                <Setter Property="Background" Value="{StaticResource SecondaryBrush}" />
                                <Setter Property="Foreground" Value="#1A471F" />
                                <Setter Property="FontSize" Value="15" />
                                <Setter Property="FontWeight" Value="SemiBold" />
                                <Setter Property="Height" Value="42" />
                                <Setter Property="BorderThickness" Value="0" />
                                <Setter Property="Padding" Value="10,0" />
                            </Style>
                        </DataGrid.ColumnHeaderStyle>
                    </DataGrid>
                </Border>

                <!-- Статус -->
                <TextBlock Grid.Row="1"
                           Margin="0,10,0,0"
                           Foreground="#2D6033"
                           FontSize="14"
                           HorizontalAlignment="Center"
                           Text="{Binding StatusMessage}" />
            </Grid>
        </Border>
    </DockPanel>
</Window>