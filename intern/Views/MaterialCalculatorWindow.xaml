<Window x:Class="intern.Views.MaterialCalculatorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:intern.Views"
        mc:Ignorable="d"
        Title="Рассчитать материалы"
        FontFamily="Gabriola"
        Background="#FFFFFF"
        FontSize="20"
        Height="450"
        Width="500">
    
    <Window.Resources>
        <SolidColorBrush x:Key="AccentBrush" Color="#2D6033" />
        <SolidColorBrush x:Key="SecondaryBrush" Color="#BBD9B2" />
    </Window.Resources>
    
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" Margin="0,0,0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="190"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <TextBlock Grid.Row="0" Grid.Column="0" Text="Тип продукта:" Margin="0,0,5,5"/>
            <ComboBox Grid.Row="0" Grid.Column="1"
                      ItemsSource="{Binding ProductTypes}"
                      SelectedItem="{Binding SelectedProductType}"
                      DisplayMemberPath="Name"
                      Margin="0,0,0,5"/>

            <TextBlock Grid.Row="1" Grid.Column="0" Text="Материал:" Margin="0,0,5,5"/>
            <ComboBox Grid.Row="1" Grid.Column="1"
          ItemsSource="{Binding Materials}"
          SelectedItem="{Binding SelectedMaterial}"
          DisplayMemberPath="Name"
          Margin="0,0,0,5"/>

            <TextBlock Grid.Row="2" Grid.Column="0" Text="Плановый тираж:" Margin="0,0,5,5"/>
            <TextBox Grid.Row="2" Grid.Column="1"
                     Text="{Binding ProductCount, UpdateSourceTrigger=PropertyChanged}"
                     Margin="0,0,0,5"/>

            <TextBlock Grid.Row="3" Grid.Column="0" Text="Параметр 1:" Margin="0,0,5,5"/>
            <TextBox Grid.Row="3" Grid.Column="1"
                     Text="{Binding Parameter1, UpdateSourceTrigger=PropertyChanged}"
                     Margin="0,0,0,5"/>

            <TextBlock Grid.Row="4" Grid.Column="0" Text="Параметр 2:" Margin="0,0,5,5"/>
            <TextBox Grid.Row="4" Grid.Column="1"
                     Text="{Binding Parameter2, UpdateSourceTrigger=PropertyChanged}"
                     Margin="0,0,0,5"/>

            <TextBlock Grid.Row="5" Grid.Column="0" Text="Остаток (со склада):" Margin="0,0,5,5"/>
            <TextBox Grid.Row="5" Grid.Column="1"
         Text="{Binding StockQuantity, Mode=OneWay}"
         IsReadOnly="True"
         Margin="0,0,0,5"/>
            <TextBlock Grid.Row="6" Grid.Column="0" Text="Результат:" Margin="0,0,5,5"/>
            <TextBlock Grid.Row="6" Grid.Column="1"
                       Text="{Binding ResultText}"
                       Foreground="DarkBlue"
                       TextWrapping="Wrap"/>
        </Grid>
        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Рассчитать"
                    Width="100"
                    Margin="0,0,10,0"
                    Command="{Binding CalculateCommand}"
                    Background="{StaticResource AccentBrush}"
                    Foreground="White"/>

            <Button Content="Закрыть"
                    Width="80"
                    Command="{Binding CloseCommand}"/>
        </StackPanel>
    </Grid>
</Window>
